<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>Registation_form</display-name>
  <welcome-file-list>
    <welcome-file>index1.html</welcome-file>
    
  </welcome-file-list>
<servlet-mapping>
  <servlet-name>firstserv</servlet-name>
  <url-pattern>/valueadd</url-pattern>
</servlet-mapping>
<servlet>
  <servlet-name>firstserv</servlet-name>
  <servlet-class>Jdbc_servlet</servlet-class>
 
  <init-param>
  <param-name>Driverclass_name</param-name>
  <param-value>com.mysql.jdbc.Driver</param-value>
  </init-param>
  
  <init-param>
  <param-name>Connection_url</param-name>
  <param-value>jdbc:mysql://localhost:3306</param-value>
  </init-param>
  
  <init-param>
  <param-name>UN</param-name>
  <param-value>j2ee</param-value>
  </init-param>
  
  <init-param>
  <param-name>PS</param-name>
  <param-value>root</param-value>
  </init-param>
</servlet>

</web-app>